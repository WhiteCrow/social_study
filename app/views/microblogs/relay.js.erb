var microblog = $('<%= "#microblog-#{@microblog.id}"%>')
var urelayLink = microblog.find('.unrelay-link')
var relayedLink = microblog.find('.relayed-link')

if (urelayLink.length > 0){
  microblog.find('.unrelay-link').replaceWith('<%= relayed_link(@microblog) %>')
}else if(relayedLink.length > 0){
  microblog.find('.relayed-link').replaceWith('<%= unrelay_link(@microblog) %>')
}

$(microblog).find('.oprate-mic').children('a.hide').show()
