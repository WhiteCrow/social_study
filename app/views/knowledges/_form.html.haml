= form_for @knowledge do |f|
  - if @knowledge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@knowledge.errors.count, "error")} prohibited this knowledge from being saved:"
      %ul
        - @knowledge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, '标题'
    = f.text_field :title
  .field
    = f.label :second_title, '又名'
    = f.text_field :second_title
  .field
    = f.label :description, '内容'
    = f.text_area :description
  .actions
    = f.submit '提交', class: 'btn btn-primary'
    = link_to '返回', :back, class: 'btn'
