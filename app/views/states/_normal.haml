=link_to statable.user do
  = statable.user.name
%small.pull-right
  =link_to statable.created_at.time_ago, state_path(state), class: 'gray-link'
.text.box
  = statable.content
.small-box.oprate-mic
  = state_comments_link(state)
  = link_to '删除', state_path(state), class: 'pl5 hide', method: :delete, remote: true, confirm: '你确定要删除这条广播吗？'
  - if statable.user != current_user
    = relay_link(state)
.st-comments.hide
