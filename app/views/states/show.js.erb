var st = $('<%="##{@auditable.class.name.underscore}-#{@auditable.id}"%>')
var stComments = st.find('.st-comments') 
var commentLink = st.find('.comment-link') 

if (!stComments.is(':parent')){
  stComments.append('<%= j render('comments/small_index', commentable: @statable)%>')
  .append('<%= j render(partial: 'comments/small_new', locals: {commentable: @statable, auditable: @auditable})%>')
}

if (stComments.is(':hidden')){
  commentLink.html('隐藏回复')
  stComments.show()
}else{
  commentLink.html('<%= "#{@statable.comments.count}回复" %>')
  stComments.hide()
}
