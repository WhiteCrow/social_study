%div#states
  - @states.each do |state|
    - statable = state.statable
    %div.state{id: "#{statable.class.name.underscore}-#{statable.id}"}
      = link_to statable.user, class: 'pull-left' do
        = image_tag statable.user.image(:small)
      %div.pull-left.span10
        =link_to statable.user do
          = statable.user.name
        %small.pull-right
          =statable.created_at.time_ago
        .text.box
          = statable.content
        .small-box.oprate-mic
          = state_comments_link(state)
          - if state.user == current_user
            = link_to '删除', state_path(state), class: 'pl5 hide', method: :delete, remote: true, confirm: '你确定要删除这条广播吗？'
          - else
            = relay_link(state) if statable.user != current_user
            %small.pl5
              (由
              = relayer_link(state)
              转播)
          %br.clear.big
          %div.st-comments.hide
        %hr.low

  .pull-right
    = paginate @states, remote: true
