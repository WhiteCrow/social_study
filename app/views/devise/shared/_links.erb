<%- unless ['sessions','home'].include? controller_name %>
  <%= link_to "登录", new_user_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && !(['account','home'].include? controller_name) %>
  <%= link_to "注册", new_user_registration_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "忘记了密码？ 请点击我", new_user_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

