.gray-link-parent
  - if operable(@entry)
    .pull-right
      //= link_to edit_entry_path(@entry), class: "gray-link edit-entry", remote: true do
      %a.gray-link{"ng-click"=>"edit(currentEntry)"}
        %i.icon-edit
      //= link_to entry_path(@entry), method: 'delete', class: "gray-link", remote: true, confirm: '你确定要删除当前节点吗？' do
      %a.gray-link{"ng-click"=>"destroy(currentEntry)", "ng-hide"=>"!(currentEntry.created_at)"}
        %i.icon-trash
  %small
    {{currentEntry.created_at}}
  .current-entry-content.clear
    %div{compile: "currentHtml"}
